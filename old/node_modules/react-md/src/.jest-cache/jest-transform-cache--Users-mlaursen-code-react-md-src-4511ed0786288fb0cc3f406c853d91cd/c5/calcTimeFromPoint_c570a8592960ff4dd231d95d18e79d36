/* istanbul ignore next */'use strict'; /* eslint-env jest */
jest.unmock('../calcTimeFromPoint');

var /* istanbul ignore next */_calcTimeFromPoint = require('../calcTimeFromPoint'); /* istanbul ignore next */var _calcTimeFromPoint2 = _interopRequireDefault(_calcTimeFromPoint);function _interopRequireDefault(obj) {return obj && obj.__esModule ? obj : { default: obj };}

var CENTER = { x: 0, y: 0 };

describe('calcTimeFromPoint', function () {
  it('calculates the time correctly for 3oclock', function () {
    var point = { x: 100, y: 0 };
    expect( /* istanbul ignore next */(0, _calcTimeFromPoint2.default)(point, CENTER, 40, false, true)).toBe(3);
  });

  it('calculates the time no matter how big the circle is', function () {
    var point = { x: 10000000, y: 100000000 };
    expect( /* istanbul ignore next */(0, _calcTimeFromPoint2.default)(point, CENTER, 40, false, true)).toBe(6);
  });

  it('can calculate the time from a non zerod point', function () {
    var point = { x: 200, y: 200 };
    var center = { x: 100, y: 200 };
    expect( /* istanbul ignore next */(0, _calcTimeFromPoint2.default)(point, center, 40, false, true)).toBe(3);
  });

  it('can get the time for the inner clock', function () {
    var point = { x: -20, y: 0 };
    expect( /* istanbul ignore next */(0, _calcTimeFromPoint2.default)(point, CENTER, 40, false, false)).toBe(21);
    point.x = 20;
    expect( /* istanbul ignore next */(0, _calcTimeFromPoint2.default)(point, CENTER, 40, false, false)).toBe(15);
  });

  it('returns 0 for time at 12 oclock in a 12 hour clock', function () {
    var point = { x: 0, y: -50 };
    expect( /* istanbul ignore next */(0, _calcTimeFromPoint2.default)(point, CENTER, 40, false, true)).toBe(0);
  });

  it('returns 0 for time at 24', function () {
    var point = { x: 0, y: -30 };
    expect( /* istanbul ignore next */(0, _calcTimeFromPoint2.default)(point, CENTER, 40, false, false)).toBe(0);
  });

  it('returns 12 for time at 12 oclock for a 24 hour clock', function () {
    var point = { x: 0, y: -50 };
    expect( /* istanbul ignore next */(0, _calcTimeFromPoint2.default)(point, CENTER, 40, false, true)).toBe(0);
  });

  it('returns 12oclock on the outside circle and 0 on the inside circle', function () {
    var twelve = { x: 0, y: -50 };
    var zero = { x: 0, y: -35 };
    expect( /* istanbul ignore next */(0, _calcTimeFromPoint2.default)(twelve, CENTER, 40, false, false)).toBe(12);
    expect( /* istanbul ignore next */(0, _calcTimeFromPoint2.default)(zero, CENTER, 40, false, false)).toBe(0);
  });
});